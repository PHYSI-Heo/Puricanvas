<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:id="@+id/rl_device_item"
    android:background="@drawable/list_item_shape"
    android:elevation="8dp">

    <ImageView
        android:id="@+id/iv_btn_setup"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@color/colorAccent"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:src="@drawable/ic_setting"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/iv_btn_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@color/colorButton"
        android:clickable="true"
        android:focusable="true"
        android:padding="20dp"
        android:src="@drawable/ic_img_rotation"
        android:layout_toStartOf="@id/iv_btn_setup"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/iv_btn_image"
        tools:text="DEVICE NAME"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:paddingStart="24dp"
        android:paddingEnd="16dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>